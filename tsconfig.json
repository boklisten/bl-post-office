{
  "include": ["index.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "test", "lib", "dist", "tmp"],
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types": ["reflect-metadata", "node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "outDir": "dist"
  }
}
