{
  "include": ["types.ts", "src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types": ["reflect-metadata", "node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "lib": ["es6", "dom"]
  }
}
